<p id="notice"><%= notice %></p>

<h1>Rumors</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rumors.each do |rumor| %>
      <tr>
        <td><%= rumor.title %></td>
        <td><%= rumor.body %></td>
        <td><%= link_to 'Show', rumor %></td>
        <td><%= link_to 'Edit', edit_rumor_path(rumor) %></td>
        <td><%= link_to 'Destroy', rumor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rumor', new_rumor_path %>
