<p id="notice"><%= notice %></p>

<h1>Fibbles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fibbles.each do |fibble| %>
      <tr>
        <td><%= fibble.title %></td>
        <td><%= fibble.body %></td>
        <td><%= link_to 'Show', fibble %></td>
        <td><%= link_to 'Edit', edit_fibble_path(fibble) %></td>
        <td><%= link_to 'Destroy', fibble, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

